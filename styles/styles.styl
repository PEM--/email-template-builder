// Colors
green = #007E5F
blue = #6CAEDF
lightGrey = #f0f0f0
grey = #bcbcbc
darkGrey = #6b6b6b

textColor = darkGrey

brandPrimary = orange
brandSecondary = green

borderBrandPrimary = darken(brandPrimary, 10%)
hoveredBrandPrimary = borderBrandPrimary
invertedBrandPrimary = lighten(orange, 70%)
hoveredInvertedBrandPrimary = lighten(invertedBrandPrimary, 40%)

headerColor = brandSecondary

bgColor = hoveredInvertedBrandPrimary
hrColor = lighten(orange, 50%)
hrBgColor = lighten(orange, 30%)

// Fonts
headerFont = "Impact", sans-serif
bodyFont = "Helvetica", "Arial", sans-serif
preFont = 'Droid Sans Mono', 'Roboto Mono', 'Andale Mono', monospace

// Import Ink (based on 1.0.5, modified for Stylus)
@import '_ink'

// Whole email
body, .body, html
  background hoveredInvertedBrandPrimary !important

.main-content
  background #ffffff !important
  padding 20px !important
  margin 20px !important
  border 1px solid brandPrimary !important
  border-radius 5px !important

// Invoice
.invoice
  border 1px grey solid !important
  background lightGrey !important
  pre
    color darkGrey !important

.cgv
  h1, h2, h3, h4, h5, h6
    color textColor !important
    text-align left !important
    font-size 14px !important
  p, a
    font-size 12px !important
    text-align justify !important

