// Colors
green = #006b00
green-gradient-dark = #147114
green-gradient-light = #3E8C3D
grey = #96989c
lightgrey = rgb(236, 238,239)
grey-dark = #444444
error = #f90057
base-color = grey-dark
lightyellow = #F6F6E5
yelloworange = #F5A623
orange = #FF6600
blue = #6CAEDF

// Text
body-font-size = 18px
base-line-height = 1.3

spacer = body-font-size

textColor = #555555

brandPrimary = orange
brandSecondary = green

borderBrandPrimary = darken(brandPrimary, 10%)
hoveredBrandPrimary = borderBrandPrimary
invertedBrandPrimary = lighten(orange, 70%)
hoveredInvertedBrandPrimary = lighten(invertedBrandPrimary, 40%)

headerColor = brandSecondary


bgColor = hoveredInvertedBrandPrimary
hrColor = lighten(orange, 50%)
hrBgColor = lighten(orange, 30%)

// Fonts
headerFont = "Impact", sans-serif
bodyFont = "Helvetica", "Arial", sans-serif
preFont = 'Droid Sans Mono', 'Roboto Mono', 'Andale Mono', monospace

// Whole email
body, .body, html
  background hoveredInvertedBrandPrimary !important

.main-content
  background #ffffff !important
  padding 20px
  margin 20px
  border 1px solid brandPrimary
  border-radius 5px

